<%= form_with(model: person, local: true) do |form| %>


  <div class="field">
    <%= form.label :firstName %>
    <%= form.text_field :firstName, id: :person_firstName %>
  </div>

  <div class="field">
    <%= form.label :lastName %>
    <%= form.text_field :lastName, id: :person_lastName %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email, id: :person_email %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
